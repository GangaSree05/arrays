#include <stdio.h>

int main(void) {
    int i, n;
    int *a,*b,*c;
    printf("Enter the size of the arrays :");
    scanf("%d", &n);
    a = (int*)malloc(n * sizeof(int));
    b = (int*)malloc(n * sizeof(int));
    c = (int*)malloc(n * sizeof(int));
    printf("Enter Elements of 1st set ");
    for (i = 0; i < n; i++)
    {
      scanf("%d", (a + i));
    }
    printf("Enter Elements of 2nd set ");
    for (i = 0; i < n; i++)
    {
      scanf("%d", (b + i));
    }
    for (i = 0; i < n; i++){
      *(c+i)=*(a+i)+ *(b+i);
    }
    for (i = 0; i < n; i++){
      printf("%d ", *(c + i));
    }

     return 0;
   }
